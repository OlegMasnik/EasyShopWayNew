<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>CabinetServlet</servlet-name>
		<display-name>CabinetServlet</display-name>
		<description></description>
		<servlet-class>com.epam.easyshopway.controller.CabinetServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HomeServlet</servlet-name>
		<display-name>HomeServlet</display-name>
		<description></description>
		<servlet-class>com.epam.easyshopway.controller.HomeServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<display-name>LoginServlet</display-name>
		<description></description>
		<servlet-class>com.epam.easyshopway.controller.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<display-name>LogoutServlet</display-name>
		<description></description>
		<servlet-class>com.epam.easyshopway.controller.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<display-name>RegistrationServlet</display-name>
		<description></description>
		<servlet-class>com.epam.easyshopway.controller.RegistrationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserInfoServlet</servlet-name>
		<display-name>UserInfoServlet</display-name>
		<description></description>
		<servlet-class>com.epam.easyshopway.controller.UserInfoServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>VerifyRegisteredEmailHash</servlet-name>
		<display-name>VerifyRegisteredEmailHash</display-name>
		<servlet-class>com.epam.easyshopway.controller.VerifyRegisteredEmailHash</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AppErrorHandler</servlet-name>
		<display-name>AppErrorHandler</display-name>
		<servlet-class>com.epam.easyshopway.controller.AppErrorHandler</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>HomeServlet</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/reg</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CabinetServlet</servlet-name>
		<url-pattern>/cabinet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>UserInfoServlet</servlet-name>
		<url-pattern>/info</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>VerifyRegisteredEmailHash</servlet-name>
		<url-pattern>/VerifyRegisteredEmailHash</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AppErrorHandler</servlet-name>
		<url-pattern>/AppErrorHandler</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>EncodingFilter</filter-name>
		<display-name>EncodingFilter</display-name>
		<description></description>
		<filter-class>com.epam.easyshopway.filter.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/AppErrorHandler</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/AppErrorHandler</location>
	</error-page>

</web-app>
